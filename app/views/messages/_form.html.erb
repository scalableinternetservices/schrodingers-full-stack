<%= form_with model: @message, html: { class: 'message-form' } do |form| %>
  <div class="form-group">
    <%= form.hidden_field :sender, value: session[:current_user_id] %>
  </div>
  <div class="form-group">
    <%= form.label :receiver, class: 'form-label' %><br>
    <%= form.text_field :receiver, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :title, class: 'form-label' %><br>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :body, class: 'form-label' %><br>
    <%= form.text_area :body, class: 'form-control' %>
  </div>
  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
