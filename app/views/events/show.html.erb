<h1><%= @event.title %></h1>
<p><%= @event.description %></p>
<p>At <%= @event.time %></p>

<%= button_to 'Home', '/', method: :get, class: 'btn btn-danger'%>

<ul>
    <li><%= link_to "Edit", edit_event_path(@event) %></li>
    <li><%= link_to "Delete", event_path(@event), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                    } %></li>
</ul>
