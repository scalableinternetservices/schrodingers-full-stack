<h1>All Events</h1>

<% @events.each do |event| %>
  <div class="event">
    <h2><%= link_to event.title, event_path(event) %></h2>
    <p><%= event.description %></p>
    <p><%= event.location %></p>
    <p><%= event.time.strftime("%B %d, %Y %l:%M %p") %></p>
  </div>
<% end %>
